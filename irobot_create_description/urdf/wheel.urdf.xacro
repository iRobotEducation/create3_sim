<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

<xacro:macro name="wheel" params="name parent_link *origin">

  <xacro:property name="mass_kg"   value="0.2" />
  <xacro:property name="radius_cm" value="3.575" />
  <xacro:property name="width_cm"  value="1.5" />

  <joint name="wheel_${name}_joint" type="continuous">
    <parent link="${parent_link}"/>
    <child link="wheel_${name}_link"/>
    <xacro:insert_block name="origin"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_${name}_link">
    <visual>
      <geometry>
        <cylinder length="${width_cm*cm2m}" radius="${radius_cm*cm2m}"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="${width_cm*cm2m}" radius="${radius_cm*cm2m}"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="${mass_kg}" radius="${radius_cm*cm2m}" 
      length="${width_cm*cm2m}" />
  </link>

  <gazebo reference="wheel_${name}_link">
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.0001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

</xacro:macro>
</robot>
