<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="optical_mouse" params="name parent *origin ros_topic visualize noise_mean:=0
                                            noise_var:=0 mouse_seed update_rate" >

    <!-- Sensor settings -->
    <xacro:property name="mass" value="0.1" />
    <xacro:property name="length" value="0.008" /> <!-- Length -->
    <xacro:property name="radius" value="0.01" /> <!-- Radius -->

    <!-- Visualization settings -->
    <xacro:property name="color" value="Red" />

    <joint name="optical_mouse_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="optical_mouse_${name}_link"/>
    </joint>

    <link name="optical_mouse_${name}_link">
      <xacro:if value="${visualize}">
        <visual>
          <geometry>
            <cylinder length="${length}" radius="${radius}" />
          </geometry>
        </visual>
      </xacro:if>
      <xacro:inertial_cylinder mass="${mass}" length="${length}" radius="${radius}" />
    </link>

    <gazebo>
      <plugin name="gazebo_ros_optical_mouse" filename="libgazebo_ros_create_optical_mouse.so">
        <ros>
          <namespace>/</namespace>
        </ros>
        <update_rate>${update_rate}</update_rate>
        <link>optical_mouse_${name}_link</link>
        <gaussian_mean>${noise_mean}</gaussian_mean>
        <gaussian_var>${noise_var}</gaussian_var>
        <xacro:if value="${mouse_seed > 0}">
          <!-- Only pass the value if it's possitive. Otherwise, use random. -->
          <mouse_seed>${mouse_seed}</mouse_seed>
        </xacro:if>
      </plugin>
    </gazebo>

    <gazebo reference="optical_mouse_${name}_link" >
      <material>Gazebo/${color}</material>
    </gazebo>

    <gazebo reference="optical_mouse_joint" >
      <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>
  </xacro:macro>
</robot>
