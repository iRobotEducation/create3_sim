<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
<xacro:include filename="$(find irobot_create_description)/urdf/wheel.urdf.xacro" />

<xacro:macro name="wheel_with_wheeldrop" params="name parent_link *origin">

  <xacro:property name="wheel_drop_lower"             value="0" />
  <xacro:property name="wheel_drop_upper"             value="0.03" />
  <xacro:property name="wheel_drop_effort"            value="100" />
  <xacro:property name="wheel_drop_vel"               value="1" />
  <xacro:property name="wheel_drop_spring_stiffness"  value="300" />
  <xacro:property name="wheel_drop_spring_reference"  value="0.03" />
  <xacro:property name="wheel_axle_mass"              value="0.05" />
  <xacro:property name="wheel_axle_x"                 value="0.15" />
  <xacro:property name="wheel_axle_y"                 value="0.15" />
  <xacro:property name="wheel_axle_z"                 value="0.15" />

  <joint name="wheel_${name}_axle_joint" type="prismatic">
    <parent link="${parent_link}"/>
    <child link="wheel_${name}_axle_link"/>
    <xacro:insert_block name="origin"/>
    <axis xyz="0 1 0"/>
    <limit lower="${wheel_drop_lower}" upper="${wheel_drop_upper}" effort="${wheel_drop_effort}"
      velocity="${wheel_drop_vel}"/>
  </joint>

  <!-- Gazebo parameters to simulate a spring -->
  <gazebo reference="wheel_${name}_axle_joint">
    <implicitSpringDamper>true</implicitSpringDamper>
    <springStiffness>${wheel_drop_spring_stiffness}</springStiffness>
    <springReference>${wheel_drop_spring_reference}</springReference>
  </gazebo>

  <link name="wheel_${name}_axle_link">
    <xacro:inertial_cuboid mass="${wheel_axle_mass}" x="${wheel_axle_x}" y="${wheel_axle_y}" 
      z="${wheel_axle_z}"/>
  </link>
  
  <!-- Wheel definition -->
  <xacro:wheel name="${name}" parent_link="wheel_${name}_axle_link">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:wheel>

</xacro:macro>
</robot>
